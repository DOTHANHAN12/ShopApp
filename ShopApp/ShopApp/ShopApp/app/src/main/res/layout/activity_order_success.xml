<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="32dp"
    android:background="@color/white"
    tools:context=".OrderSuccessActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_check_circle"
        android:contentDescription="Success Icon"
        app:tint="@color/shopee_green"/> <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:text="ĐẶT HÀNG THÀNH CÔNG!"
    android:textColor="@color/black"
    android:textSize="24sp"
    android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_order_success_id" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/grey_dark"
        android:textSize="16sp"
        tools:text="Mã đơn hàng của bạn: #ABC123XYZ"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Cảm ơn bạn đã mua hàng. Đơn hàng sẽ được xử lý sau khi xác nhận thanh toán."
        android:textColor="@color/grey_text"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/btn_continue_shopping" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="TIẾP TỤC MUA SẮM"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"/>

</LinearLayout>