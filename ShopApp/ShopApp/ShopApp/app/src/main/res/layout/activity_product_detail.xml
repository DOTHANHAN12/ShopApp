<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:fitsSystemWindows="true"
        android:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways"
            app:contentInsetStartWithNavigation="0dp"
            android:elevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingEnd="16dp"
                tools:ignore="RtlSymmetry">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_back"
                    android:padding="8dp"
                    app:tint="@android:color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:contentDescription="@string/back_desc"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="AirSense Jacket | Wool Like"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@id/img_back"
                    app:layout_constraintEnd_toStartOf="@id/img_notification"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:visibility="visible"/>

                <ImageView
                    android:id="@+id/img_cart"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_shopping_bag"
                    app:tint="#444"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:contentDescription="@string/cart_desc"/>

                <ImageView
                    android:id="@+id/img_favorite"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_favorite_outline"
                    app:tint="#444"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toStartOf="@id/img_cart"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:contentDescription="@string/favorite_desc"/>

                <ImageView
                    android:id="@+id/img_notification"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_notification"
                    app:tint="#444"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toStartOf="@id/img_favorite"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:contentDescription="@string/notification_desc"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="100dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="#f0f0f0">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/view_pager_product_images"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/text_image_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="16dp"
                    android:background="#80000000"
                    android:textColor="@android:color/white"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:textSize="12sp"
                    tools:text="1 | 3"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/text_product_name_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/img_favorite_detail"
                        android:layout_centerVertical="true"
                        android:text="AirSense Jacket | Wool Like"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_marginEnd="16dp"/>

                    <ImageView
                        android:id="@+id/img_favorite_detail"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_favorite_outline"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        app:tint="#444"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/text_color_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color: 08 DARK GRAY"
                    android:textSize="14sp"
                    android:textColor="#333"
                    android:layout_marginBottom="8dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_color_selector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="3"
                    tools:orientation="horizontal"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/text_size_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size: MEN M"
                    android:textSize="14sp"
                    android:textColor="#333"
                    android:layout_marginBottom="8dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_size_selector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="6"
                    tools:orientation="horizontal"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.471.000 VND"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#DD0000"/>

                        <TextView
                            android:id="@+id/text_original_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.699.000 VND"
                            android:textSize="16sp"
                            android:textColor="@android:color/darker_gray"
                            android:alpha="0.8"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <RatingBar
                            android:id="@+id/rating_bar_detail"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="4.8"
                            android:stepSize="0.1"
                            android:isIndicator="true"
                            android:progressTint="#FFC107" />
                        <TextView
                            android:id="@+id/text_review_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(512)"
                            android:textSize="14sp"
                            android:textColor="#333"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/rounded_border_gray"
                    android:paddingHorizontal="4dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/btn_decrement_qty"
                        android:layout_width="32dp"
                        android:layout_height="match_parent"
                        android:text="-"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:textColor="#333"/>

                    <TextView
                        android:id="@+id/text_selected_quantity"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="1"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/btn_increment_qty"
                        android:layout_width="32dp"
                        android:layout_height="match_parent"
                        android:text="+"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/text_stock_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Low stock"
                    android:textColor="#DD0000"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/text_inventory_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#666"
                    android:textSize="12sp"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/btn_add_to_cart"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ADD TO CART"
                    android:background="@drawable/rounded_button_black"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="24dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Store inventory status"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We can display a nearest store stock status if location service is turned on."
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="USE MY LOCATION"
                    android:background="@drawable/rounded_button_black"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#eee" android:layout_marginVertical="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frequently bought together"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="12dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_frequently_bought"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:paddingStart="16dp"
                android:clipToPadding="false"
                tools:itemCount="3"
                tools:orientation="horizontal"
                android:layout_marginBottom="24dp"/>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#eee" android:layout_marginVertical="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reviews"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_see_all_reviews"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="See all"
                        android:textColor="@color/colorAccent"
                        android:textSize="14sp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_reviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:nestedScrollingEnabled="false"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_my_review" />

                <Button
                    android:id="@+id/btn_write_review"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Write a Review"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <include layout="@layout/layout_floating_bottom_nav" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
