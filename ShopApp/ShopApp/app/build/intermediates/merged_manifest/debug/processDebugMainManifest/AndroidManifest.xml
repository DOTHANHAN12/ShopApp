        <activity
            android:name="com.example.shopapp.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.example.shopapp.OrderHistoryActivity"
            android:exported="false" />
        <activity
            android:name="com.example.shopapp.ProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.example.shopapp.VoucherSelectionActivity"
            android:exported="false" />
        <activity
            android:name="com.example.shopapp.OrderSuccessActivity"
            android:exported="false"
            android:label="Đặt hàng thành công" />
        <activity
            android:name="com.example.shopapp.AddressSelectionActivity"
            android:exported="false"
            android:label="Chọn địa chỉ"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.shopapp.EditAddressActivity"
            android:exported="false"
            android:label="Sửa địa chỉ"
