        <activity
            android:name="com.example.shopapp.FavoriteActivity"
            android:exported="false" />
        <activity
            android:name="com.example.shopapp.CartActivity"
            android:exported="false" />
        <activity
            android:name="com.example.shopapp.UserProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.example.shopapp.HomeActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.shopapp.ProductDetailActivity"
            android:exported="false" />
        <activity
            android:name="com.example.shopapp.CategorySearchActivity"
            android:exported="false" />
        <activity
            android:name="com.example.shopapp.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.example.shopapp.RegisterActivity"
            android:exported="false" />
        <activity android:name="com.example.shopapp.ProductListActivity" />

        <service
            android:name="com.google.firebase.components.ComponentDiscoveryService"
            android:directBootAware="true"
            android:exported="false" >
