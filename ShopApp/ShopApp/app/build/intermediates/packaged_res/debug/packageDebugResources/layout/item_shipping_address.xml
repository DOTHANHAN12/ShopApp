<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Radio Button for Selection -->
        <RadioButton
            android:id="@+id/radio_select_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@android:color/holo_red_dark"
            app:layout_constraintBottom_toBottomOf="@id/layout_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/layout_content" />

        <!-- Content Container -->
        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/radio_select_address"
            app:layout_constraintEnd_toStartOf="@id/btn_edit_address">

            <!-- Name and Phone Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_person"
                    app:tint="#616161"/>

                <TextView
                    android:id="@+id/text_name_phone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Đỗ Thành An | (+84) 967851513"/>

                <!-- Default Tag -->
                <TextView
                    android:id="@+id/label_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Mặc định"
                    android:textSize="11sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/rounded_red_bg"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="3dp"
                    android:visibility="gone"
                    tools:visibility="visible"/>
            </LinearLayout>

            <!-- Street Address Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="top">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/ic_home"
                    app:tint="#616161"/>

                <TextView
                    android:id="@+id/text_street_address"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Cổng sau nhà trẻ Xóm Trong"/>
            </LinearLayout>

            <!-- Location Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="top">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/ic_location"
                    app:tint="#616161"/>

                <TextView
                    android:id="@+id/text_location"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="13sp"
                    android:textColor="#757575"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Xã Uy Nỗ, Huyện Đông Anh, Hà Nội"/>
            </LinearLayout>

            <!-- Address Type Tag -->
            <TextView
                android:id="@+id/text_address_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Nhà Riêng"
                android:textSize="11sp"
                android:textColor="#FF6B6B"
                android:background="@drawable/rounded_border_light_red"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                tools:text="Nhà Riêng"/>

        </LinearLayout>

        <!-- Edit Button -->
        <TextView
            android:id="@+id/btn_edit_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sửa"
            android:textSize="14sp"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Divider (optional) -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#E0E0E0"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/layout_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>