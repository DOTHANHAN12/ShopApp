<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="40dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start"
            android:layout_marginBottom="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MEOMEO"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#E50914"
                android:letterSpacing="0.12"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新規会員登録 • Đăng ký thành viên mới"
                android:textSize="13sp"
                android:textColor="#666666"
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>

        <!-- Full Name Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HỌ VÀ TÊN"
            android:textSize="11sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:letterSpacing="0.08"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/edtFullName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Nguyễn Văn An"
            android:inputType="textPersonName"
            android:textSize="15sp"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:background="@drawable/bg_input_field"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:elevation="1dp"/>

        <TextView
            android:id="@+id/tvFullNameError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#E50914"
            android:textSize="11sp"
            android:visibility="gone"
            android:paddingStart="4dp"
            android:paddingTop="6dp"
            android:paddingBottom="12dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <!-- Email Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMAIL"
            android:textSize="11sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:letterSpacing="0.08"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="example@mail.com"
            android:inputType="textEmailAddress"
            android:textSize="15sp"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:background="@drawable/bg_input_field"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:elevation="1dp"/>

        <TextView
            android:id="@+id/tvEmailError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#E50914"
            android:textSize="11sp"
            android:visibility="gone"
            android:paddingStart="4dp"
            android:paddingTop="6dp"
            android:paddingBottom="12dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <!-- Password Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MẬT KHẨU"
            android:textSize="11sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:letterSpacing="0.08"
            android:layout_marginBottom="10dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="8-32 ký tự (A-z, 0-9, @$!%*?&amp;#)"
                android:inputType="textPassword"
                android:textSize="15sp"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:background="@drawable/bg_input_field"
                android:paddingStart="16dp"
                android:paddingEnd="80dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:elevation="1dp"/>

            <TextView
                android:id="@+id/tvTogglePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HIỂN THỊ"
                android:textColor="#E50914"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="12dp"
                android:padding="8dp"
                android:foreground="?attr/selectableItemBackground"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tvPasswordError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#E50914"
            android:textSize="11sp"
            android:visibility="gone"
            android:paddingStart="4dp"
            android:paddingTop="6dp"
            android:paddingBottom="12dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <!-- Confirm Password Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XÁC NHẬN MẬT KHẨU"
            android:textSize="11sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:letterSpacing="0.08"
            android:layout_marginBottom="10dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <EditText
                android:id="@+id/edtConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Nhập lại mật khẩu"
                android:inputType="textPassword"
                android:textSize="15sp"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:background="@drawable/bg_input_field"
                android:paddingStart="16dp"
                android:paddingEnd="80dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:elevation="1dp"/>

            <TextView
                android:id="@+id/tvToggleConfirmPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HIỂN THỊ"
                android:textColor="#E50914"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="12dp"
                android:padding="8dp"
                android:foreground="?attr/selectableItemBackground"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tvConfirmPasswordError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#E50914"
            android:textSize="11sp"
            android:visibility="gone"
            android:paddingStart="4dp"
            android:paddingTop="6dp"
            android:paddingBottom="12dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="32dp"/>

        <!-- Terms and Conditions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/cbTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#E50914"
                android:scaleX="1.1"
                android:scaleY="1.1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Tôi đồng ý với Điều khoản Sử dụng và Chính sách Bảo mật"
                android:textColor="#333333"
                android:textSize="12sp"
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvTermsError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#E50914"
            android:textSize="11sp"
            android:visibility="gone"
            android:paddingStart="36dp"
            android:paddingTop="6dp"
            android:paddingBottom="12dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="32dp"/>

        <!-- Register Button -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="TẠO TÀI KHOẢN"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button_register"
            android:letterSpacing="0.08"
            android:elevation="4dp"
            android:stateListAnimator="@null"
            android:fontFamily="sans-serif-medium"
            android:translationZ="4dp"/>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:indeterminateTint="#E50914"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"/>

        <!-- Back to Login -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="すでに会員ですか？"
                android:textColor="#666666"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvBackToLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ログイン"
                android:textColor="#E50914"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginStart="4dp"
                android:foreground="?attr/selectableItemBackground"
                android:padding="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" • Đã có tài khoản? "
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_marginStart="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng nhập"
                android:textColor="#E50914"
                android:textSize="12sp"
                android:textStyle="bold"
                android:foreground="?attr/selectableItemBackground"
                android:padding="4dp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
