<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:id="@+id/inner_layout_container" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_voucher_image"
            android:paddingHorizontal="4dp"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/img_voucher_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:contentDescription="Voucher Icon"
                tools:src="@drawable/ic_freeship" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/text_voucher_discount_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giảm tối đa 30k"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_voucher_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Đơn tối thiểu 0đ"
                android:textColor="@color/grey_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_voucher_not_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/red_warning"
                android:textSize="12sp"
                android:textStyle="italic"
                tools:text="Chưa đạt giá trị đơn hàng tối thiểu"
                android:visibility="gone" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="12dp">

            <ImageView
                android:id="@+id/img_voucher_check"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_check"
                android:contentDescription="Selected Checkmark"
                app:tint="@color/colorPrimary"
                android:visibility="gone"
                tools:visibility="visible" />
        </FrameLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>