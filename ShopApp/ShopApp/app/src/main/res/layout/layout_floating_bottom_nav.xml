<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"  android:background="@android:color/transparent"
    android:elevation="0dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_gravity="bottom"
    android:paddingBottom="16dp"  android:paddingTop="8dp">

    <LinearLayout
        android:id="@+id/layout_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/nav_home_cs"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:padding="8dp"
                android:background="@drawable/circle_background_black"
                android:src="@drawable/ic_home_filled"
                app:tint="@android:color/black"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btn_search_footer"
            android:layout_height="match_parent"
            android:layout_width="wrap_content">
            <ImageView
                android:background="@drawable/circle_background_black"
                android:contentDescription="@string/search_desc"
                android:layout_gravity="center"
                android:layout_height="65dp"
                android:layout_width="65dp"
                android:padding="12dp"
                android:src="@drawable/ic_search"
                app:tint="@android:color/black"/>
        </FrameLayout>

        <FrameLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/nav_user_cs"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:padding="8dp"
                android:background="@drawable/circle_background_black"
                android:src="@drawable/ic_profile_outline"
                app:tint="@android:color/black"
                android:visibility="visible"/>
        </FrameLayout>

    </LinearLayout>

</LinearLayout>