<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".CartActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_checkout_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/cart_title_bar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:paddingHorizontal="16dp"
                android:paddingTop="26dp"> <ImageView
                android:id="@+id/img_back_cart"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/back_desc"
                android:src="@drawable/ic_arrow_back"
                app:tint="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/img_back_cart"
                    android:text="Cart"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RECEIVE ONLINE ORDER AT UNIQLO STORES WITH CLICK &amp; COLLECT AT YOUR CONVENIENCE"
                android:textColor="#DD0000"
                android:textSize="12sp"
                android:textAlignment="center"
                android:paddingVertical="12dp"
                android:background="#FFF5F5"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SHOPPING CART"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                android:paddingTop="24dp"
                android:paddingBottom="12dp"/>

            <LinearLayout
                android:id="@+id/layout_shipping_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ĐỊA CHỈ NHẬN HÀNG"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <RelativeLayout
                    android:id="@+id/layout_selected_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:background="@drawable/rounded_border_gray"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/icon_location"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/ic_location_on"
                        app:tint="#DD0000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@id/icon_location"
                        android:layout_toStartOf="@id/btn_change_address">

                        <TextView
                            android:id="@+id/text_shipping_name_phone" android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            tools:text="ĐỖ Thành An | (+84) 967 851 513"/>

                        <TextView
                            android:id="@+id/text_shipping_address_line" android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#555"
                            tools:text="Cổng sau nhà trẻ Xóm Trong, Xã Uy Nỗ, Huyện Đông Anh, Hà Nội"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/btn_change_address" android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="THAY ĐỔI"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_red_dark"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="4dp"/>

                </RelativeLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_cart_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_cart"
                tools:itemCount="1"/>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#eee" android:layout_marginVertical="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PHƯƠNG THỨC THANH TOÁN"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/text_payment_cod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thanh toán khi nhận hàng (COD)"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="12dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/rounded_red_border_label"
                    android:layout_marginBottom="8dp"
                    android:drawableEnd="@drawable/ic_check"
                    app:drawableTint="#DD0000"/>

                <TextView
                    android:id="@+id/text_payment_momo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ví điện tử MoMo"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="12dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/rounded_gray_border"
                    android:drawableEnd="@drawable/ic_check"
                    app:drawableTint="@android:color/transparent"/>

                <TextView
                    android:id="@+id/text_selected_payment_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#555"
                    android:layout_marginTop="8dp"
                    tools:text="Phương thức: Thanh toán khi nhận hàng"/>
            </LinearLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#eee" android:layout_marginVertical="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chi tiết thanh toán"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout style="@style/OrderSummaryRow">
                    <TextView style="@style/OrderSummaryKey" android:text="Tổng tiền hàng"/>
                    <TextView style="@style/OrderSummaryValue" android:id="@+id/text_total_items_price" tools:text="27.500đ"/> </LinearLayout>

                <LinearLayout style="@style/OrderSummaryRow">
                    <TextView style="@style/OrderSummaryKey" android:text="Tổng cộng Voucher giảm giá"/>
                    <TextView style="@style/OrderSummaryNegativeValue" android:id="@+id/text_total_voucher_discount" tools:text="-27.500đ"/> </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#e0e0e0" android:layout_marginVertical="8dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tổng thanh toán"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/text_total_payment" android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textSize="16sp"
                        android:textColor="#DD0000"
                        android:textStyle="bold"
                        tools:text="0đ"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã bao gồm thuế"
                    android:textSize="12sp"
                    android:textColor="#555"
                    android:layout_gravity="end"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CHECKOUT"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:paddingHorizontal="16dp"
                android:paddingTop="24dp"
                android:paddingBottom="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eligible for free shipping."
                android:textSize="14sp"
                android:textColor="#555"
                android:paddingHorizontal="16dp"
                android:paddingBottom="16dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/layout_checkout_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="12dp"
        android:paddingBottom="30dp"> <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="26dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TỔNG CỘNG"
            android:textSize="12sp"
            android:textColor="#555"/>

        <TextView
            android:id="@+id/text_checkout_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0đ"
            android:textSize="16sp"
            android:textColor="#DD0000"
            android:textStyle="bold"/>
    </LinearLayout>

        <Button
            android:id="@+id/btn_checkout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ĐẶT HÀNG"
            android:backgroundTint="#DD0000"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>