<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/product_image_desc"
            android:scaleType="centerCrop"
            android:src="@drawable/your_product_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_overlay"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:id="@+id/layout_top_icons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingTop="8dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/notification_desc"
                android:src="@drawable/ic_notification"
                app:tint="@android:color/white"
                tools:ignore="ContentDescription"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/favorite_desc"
                android:src="@drawable/ic_favorite"
                app:tint="@android:color/white"
                tools:ignore="ContentDescription"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ic_cart"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/cart_desc"
                    android:src="@drawable/ic_shopping_bag"
                    app:tint="@android:color/white"
                    tools:ignore="ContentDescription"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="-4dp"
                    android:layout_marginEnd="-4dp"
                    android:background="@drawable/circle_badge"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"/>
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            app:layout_constraintTop_toBottomOf="@id/layout_top_icons">

            <TextView android:text="WOMEN" style="@style/CategoryTab"/>
            <TextView android:text="MEN" style="@style/CategoryTab.Selected"/>
            <TextView android:text="KIDS" style="@style/CategoryTab"/>
            <TextView android:text="BABY" style="@style/CategoryTab"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_product_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            app:layout_constraintBottom_toTopOf="@id/layout_bottom_nav"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/limited_offer_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="LIMITED OFFER"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reversible Parka"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:alpha="0.8"
                android:text="Water-repellent outer with a soft jersey lining."
                android:textColor="@android:color/white"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="784.000 VND"
                android:textColor="#FF0000"
                android:textSize="32sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:alpha="0.6"
                android:background="@drawable/strikethrough_text"
                android:text="980.000 VND"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Celebrate Mid-Autumn Festival With Limited Offers"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="From 03.10 - 09.10"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:text="*The fabric is coated with a water-repellent agent so the effect lasts longer. The finish is not permanent."
                android:textColor="@android:color/white"
                android:textSize="10sp"/>

        </LinearLayout>

        <View
            android:layout_width="4dp"
            android:layout_height="100dp"
            android:layout_marginEnd="12dp"
            android:alpha="0.5"
            android:background="@android:color/white"
            app:layout_constraintBottom_toTopOf="@id/layout_bottom_nav"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_tabs"
            app:layout_constraintVertical_bias="0.4"/>


        <LinearLayout
            android:id="@+id/layout_bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:src="@drawable/ic_home_filled"
                app:tint="@android:color/white"
                style="@style/BottomNavIcon"/>

            <FrameLayout
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_background_black"
                    android:contentDescription="@string/search_desc"
                    android:padding="12dp"
                    android:src="@drawable/ic_search"
                    app:tint="@android:color/black"
                    tools:visibility="visible" />
            </FrameLayout>

            <ImageView
                android:src="@drawable/ic_profile_outline"
                android:visibility="visible"
                app:tint="@android:color/white"
                style="@style/BottomNavIcon"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>