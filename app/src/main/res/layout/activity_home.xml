<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager_featured_products"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:id="@+id/layout_top_icons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingTop="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="end">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/notification_desc"
                android:src="@drawable/ic_notification"
                app:tint="@android:color/white"
                tools:ignore="ContentDescription"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/favorite_desc"
                android:src="@drawable/ic_favorite"
                app:tint="@android:color/white"
                tools:ignore="ContentDescription"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ic_cart"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/cart_desc"
                    android:src="@drawable/ic_shopping_bag"
                    app:tint="@android:color/white"
                    tools:ignore="ContentDescription"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="-4dp"
                    android:layout_marginEnd="-4dp"
                    android:background="@drawable/circle_badge"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            app:layout_constraintTop_toBottomOf="@id/layout_top_icons">

            <TextView android:id="@+id/tab_women" android:text="WOMEN" style="@style/CategoryTab"/>
            <TextView android:id="@+id/tab_men" android:text="MEN" style="@style/CategoryTab.Selected"/>
            <TextView android:id="@+id/tab_kids" android:text="KIDS" style="@style/CategoryTab"/>
            <TextView android:id="@+id/tab_baby" android:text="BABY" style="@style/CategoryTab"/>

        </LinearLayout>

        <View
            android:layout_width="4dp"
            android:layout_height="100dp"
            android:layout_marginEnd="12dp"
            android:alpha="0.5"
            android:background="@android:color/white"
            app:layout_constraintBottom_toTopOf="@id/layout_bottom_nav"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_tabs"
            app:layout_constraintVertical_bias="0.4"/>


        <LinearLayout
            android:id="@+id/layout_bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp">


            <ImageView
                android:src="@drawable/ic_home_filled"
                app:tint="@android:color/white"
                style="@style/BottomNavIcon"
                />

            <FrameLayout
                android:gravity="center"
                android:layout_height="88dp"
                android:layout_width="88dp">

                <ImageView
                    android:background="@drawable/circle_background_black"
                    android:contentDescription="@string/search_desc"
                    android:layout_gravity="center"
                    android:layout_height="58dp"
                    android:layout_width="58dp"
                    android:padding="12dp"
                    android:src="@drawable/ic_search"
                    app:tint="@android:color/black"/>
            </FrameLayout>

            <ImageView
                android:src="@drawable/ic_profile_outline"
                android:visibility="visible"
                app:tint="@android:color/white"
                style="@style/BottomNavIcon"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>