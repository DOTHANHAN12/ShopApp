<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/img_product_thumb"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"
            android:background="#f0f0f0"
            tools:src="@tools:sample/avatars"
            android:contentDescription="Product Thumbnail" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_product_name_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Airism T-Shirt Mùa Hè"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/text_product_type_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T-SHIRTS, SWEAT  FLEECE"
                android:textSize="12sp"
                android:textColor="#555"/>

            <TextView
                android:id="@+id/text_current_price_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="499.000 VND"
                android:textSize="18sp"
                android:textColor="#FF0000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_original_price_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="699.000 VND"
                android:textSize="12sp"
                android:textColor="#888"
                android:background="@drawable/strikethrough_text_black"
                tools:ignore="SmallSp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>